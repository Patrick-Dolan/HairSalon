@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Add a new client</h2>
<p><strong>Make sure to select the correct stylist!</strong></p>
@using (@Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")
  <input type="submit" value="Add client" />
}

<p>@Html.ActionLink("Show all clients", "Index")</p>
<p>@Html.ActionLink("Show all stylists", "Index", "Stylists")</p>