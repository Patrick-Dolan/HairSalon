@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model List<HairSalon.Models.Client>

<h3>Clients</h3>
<p>@Html.ActionLink("Add new client", "Create")</p>

@if (@Model.Count == 0)
{
  <p>No clients have been added yet.</p>
}

<ul>
@foreach (Client client in Model)
{
  <li><strong>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId })</strong></li>
    <ul>
      <li>Stylist: @client.Stylist.Name</li>
    </ul>
}
</ul>