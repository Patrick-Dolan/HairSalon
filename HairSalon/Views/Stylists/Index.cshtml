@{
  Layout = "_Layout";
}

@using HairSalon.Models

<h2>Stylists</h2>

@if (@Model.Count == 0)
{
  <p>No Stylists have been added yet.</p>
}

@if (Model.Count >= 1)
{
  <p>Click on a stylists name to see more information on the stylist and their client list.</p>
}

<p>@Html.ActionLink("Add new stylist", "Create")</p>

@foreach (Stylist stylist in Model)
{
  <li><strong>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</strong></li>
}
